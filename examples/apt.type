enum apt_state { absent, build-dep, latest, present, fixed }

module ansible.builtin.apt {
  (name : list<string>)
  [state : apt_state = present]

  for pkg in name {
    match state {
      absent  => {
        clear package(pkg);
        package(pkg).installed = false;
      }
      latest  => {
        package(pkg).installed = true;
        package(pkg).version   = latest;
      }
      present => {
        package(pkg).installed = true;
      }
    }
  }
}
